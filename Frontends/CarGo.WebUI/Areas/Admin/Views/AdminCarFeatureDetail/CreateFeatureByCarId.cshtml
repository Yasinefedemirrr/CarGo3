@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "CreateFeatureByCarId";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    var carId = ViewBag.CarId; // controller’dan set etmen lazım
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araca Ait Özellikler Ekleme Sayfası</h4>
                        <p class="card-subtitle mb-4">
                            Araca ait özellik tanımlaması yapılacak sayfadır.
                        </p>
                        <form method="post">
                            <input type="hidden" name="CarId" value="@carId" />
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                <div class="form-check">
                                    <input type="checkbox" name="SelectedFeatureIds" value="@Model[i].FeatureId" class="form-check-input" id="feature_@i" />
                                    <label class="form-check-label" for="feature_@i">@Model[i].Name</label>
                                </div>
                            }
                            <br />
                            <button class="btn btn-primary">Araca Özellikleri Ata</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
